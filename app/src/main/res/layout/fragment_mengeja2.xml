<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F0E8">

    <ImageView
        android:id="@+id/cloud_top_right"
        android:layout_width="129dp"
        android:layout_height="93dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-9dp"
        android:layout_marginEnd="-11dp"
        android:alpha="0.6"
        android:src="@drawable/desainatas" />

    <ImageView
        android:id="@+id/cloud_right"
        android:layout_width="83dp"
        android:layout_height="156dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="0dp"
        android:alpha="0.5"
        android:src="@drawable/desainkanan" />

    <ImageView
        android:id="@+id/cloud_bottom_left"
        android:layout_width="134dp"
        android:layout_height="103dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="0dp"
        android:alpha="0.4"
        android:src="@drawable/desainbawah" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="40dp">

            <ImageView
                android:id="@+id/logo_owl"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/logo" />

        </LinearLayout>

        <TextView
            android:id="@+id/title_mengeja"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mengeja"
            android:textSize="32sp"
            android:textColor="#333333"
            android:fontFamily="sans-serif-bold"
            android:layout_marginBottom="50dp" />

        <ImageView
            android:id="@+id/speaker_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/speaker"
            android:background="@drawable/circle_background"
            android:padding="20dp"
            android:layout_marginBottom="60dp"
            android:clickable="true"
            android:focusable="true" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="50dp">

            <TextView
                android:id="@+id/letter_be"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="be"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/persegi"
                android:gravity="center"
                android:fontFamily="sans-serif-medium"
                android:layout_marginEnd="4dp" />

            <TextView
                android:id="@+id/letter_sa"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="sa"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/persegi"
                android:gravity="center"
                android:fontFamily="sans-serif-medium"
                android:layout_marginEnd="4dp" />

            <TextView
                android:id="@+id/letter_ber"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="ber"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/persegi"
                android:gravity="center"
                android:fontFamily="sans-serif-medium"
                android:layout_marginEnd="4dp" />

            <TextView
                android:id="@+id/letter_jar"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="jar"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/persegi"
                android:gravity="center"
                android:fontFamily="sans-serif-medium"
                android:layout_marginEnd="4dp" />

            <TextView
                android:id="@+id/letter_ma"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="ma"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/persegi"
                android:gravity="center"
                android:fontFamily="sans-serif-medium"
                android:layout_marginEnd="4dp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>