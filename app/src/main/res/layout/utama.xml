<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="24dp"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/logo_kecil"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:contentDescription="Logo Teman Belajarku"
        android:src="@drawable/logo" />

    <Button
        android:id="@+id/btn_belajar_angka"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/belajarangka"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:gravity="center"/>

    <Button
        android:id="@+id/btn_mengenal_warna"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/mengenalwarna"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:gravity="center"/>

    <Button
        android:id="@+id/btn_membaca"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/membaca"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:gravity="center"/>

    <Button
        android:id="@+id/btn_bernyanyi"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:background="@drawable/bernyanyi"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:gravity="center"/>

</LinearLayout>